<% if @tweet.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h2>У нас
      <%= pluralize(@tweet.errors.count, "error") %>(проблєми), Джоні</h2>

    <ul>
      <% @tweet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="form-group field">
  <%= f.text_field :body, class:"input", placeholder:"tweet", class:"input" %><br>
</div>
