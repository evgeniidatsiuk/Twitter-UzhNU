<div class="user-profile container-fluid">
	
<div class="row">
  <div class="col-md-3 col-lg-4"></div>
      <div class="col-sm-12 col-md-6 col-lg-4 center">
        <br><%= gravatar_for @user, size: 100 %>
        <br>
        <%= link_to "Settings", edit_user_registration_path, class:"btn btn-secondary" %>
        <%= render 'users/stats' %>
        <hr>

        <%= render 'relationships/form' %>
        <%= link_to "followers", followers_user_path(@user) %>
        <%=link_to "following", following_user_path(@user) %>
        <br>

        <% if @user.tweets.any? %>
          <h3>Tweets (<%= @user.tweets.count %>)</h3>
          <%= render @user.tweets %>
        <% end %>
</div><!-- /.col -->
<div class="col-md-3 col-lg-4"></div>
</div><!-- /.row -->