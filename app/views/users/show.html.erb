<div class="user-profile container-fluid">
	
<div class="row">
  <div class="col-md-3 col-lg-4"></div>
      <div class="col-sm-6 col-md-6 col-lg-4 center">
        <br><%= gravatar_for @user, size: 50 %>
        <br>
        <%= link_to "Setting", edit_user_registration_path, class:"btn btn-secondary" %>
        <%= render 'users/stats' %>
        <hr>
        <%= render 'users/follow_form' %>
        <% if @user.tweets.any? %>
          <h3>Tweets (<%= @user.tweets.count %>)</h3>
          <%= render @tweets %>
        <% end %>
</div><!-- /.col -->
<div class="col-md-3 col-lg-4"></div>
</div><!-- /.row -->
    

</div>